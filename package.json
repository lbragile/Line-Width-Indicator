{
  "name": "line-width-indicator",
  "displayName": "Line Width Indicator",
  "description": "Shows how many characters you can type until line limit is reached.",
  "publisher": "lbragile",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.46.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lbragile/Line-Width-Indicator/issues",
    "email": "lbragile.masc@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lbragile/Line-Width-Indicator.git"
  },
  "homepage": "https://github.com/lbragile/Line-Width-Indicator/blob/master/README.md",
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "word count",
    "line limit",
    "character count",
    "character count indicator"
  ],
  "icon": "images/lwi-logo.png",
  "galleryBanner": {
    "color": "#99CCFF",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:line-width-indicator.activateLineWidthIndicator",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "line-width-indicator.activateLineWidthIndicator",
        "title": "Activate LWI"
      }
    ],
    "configuration": {
      "title": "Line Width Indicator",
      "properties": {
        "LWI.breakpointRulers": {
          "type": "array",
          "default": [
            {
              "color": "rgb(0, 255, 0, 0.6)",
              "column": 110
            },
            {
              "color": "rgb(255, 255, 0, 0.6)",
              "column": 115
            },
            {
              "color": "rgb(255, 165, 0, 0.6)",
              "column": 120
            },
            {
              "color": "rgb(255, 0, 0, 0.6)",
              "column": 125
            }
          ],
          "description": "The counter will change to the respective color when its count is below that column's value."
        },
        "LWI.excludedLanguages": {
          "type": "array",
          "default": [
            "json",
            "css",
            "html",
            "markdown",
            "plaintext",
            "scss",
            "yaml"
          ],
          "markdownDescription": "An array of [languages identifiers](https://code.visualstudio.com/docs/languages/identifiers#_known-language-identifiers) for which you wish not to use the 'Line Width Indicator' extension."
        },
        "LWI.formatMaxWidth": {
          "type": "number",
          "default": 120,
          "markdownDescription": "This should match your default formatter maximum width before it applies text wrapping."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "ts-loader": "^8.0.14",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
